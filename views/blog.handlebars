{{#each blogs as |blog|}}
    <div class="blog-card">
        <div class="blog-container">
            <div class="blog-header">
                <h1 >{{blog.title}}</h1>
            </div>
            <div class="blog-author">
                <p class="blog-name">{{user.username}}</p>
            </div>
            <div class="blog-content">
                <p>{{blog.content}}
            </div>
            <div>
                <p class="blog-date">{{blog.createdAt}}</p>
            </div>
        </div>
    </div>
{{/each}}

   
