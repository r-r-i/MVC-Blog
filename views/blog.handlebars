<div>
    <div class="blog-card">
        <div class="blog-container">
            <div class="blog-header">
                <h1>{{title}}</h1>
            </div>
            <div class="blog-author">
                <p class="blog-name">{{user.username}}</p>
            </div>
            <div class="blog-content">
                <p>{{content}}
            </div>
            <div>
                <p class="blog-date">{{format_date createdAt}}</p>
            </div>
            
        </div>
    </div>
</div>