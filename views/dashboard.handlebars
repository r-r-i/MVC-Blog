<div class="dashboard-container">
    <div class="dashboard-name">
        <h1>{{username}}</h1>
    </div>
    <div class="dashboard-text">
        <p>These are the blogs you have created.</p>
    </div>
</div>
{{#each blogs as |blog|}}
<div>
    <div class="blog-card">
        <div class="blog-container">
            <div class="blog-header">
                <h1>{{blog.title}}</h1>
            </div>
            <div class="blog-content">
                <p>{{blog.content}}
            </div>
            <div>
                <p class="blog-date">{{format_date createdAt}}</p>
            </div>
            
        </div>
    </div>
</div>
{{/each}}   






